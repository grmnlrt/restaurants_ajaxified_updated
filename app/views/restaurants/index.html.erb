<h1>Restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
      <small><%= link_to "Delete", restaurant, method: :delete, remote: true, data: { confirm: "Do you really want to remove #{restaurant.name}?"} %></small>
    </li>
  <% end %>
</ul>
